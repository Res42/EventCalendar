<form method="POST">
    <h2>Felhasználói adatok</h2>

    <div class="form-group row">
        <label for="userDisplayName" class="col-2 col-form-label">Megjelenített név</label>
        <div class="col-10">
            <input type="text" class="form-control" id="userDisplayName" name="userDisplayName" value="<%= model.displayName %>" required>
        </div>
    </div>

    <div class="form-group row">
        <label for="userPassword" class="col-2 col-form-label">Jelszó</label>
        <div class="col-10">
            <input type="password" class="form-control" id="userPassword" name="userPassword" required>
        </div>
    </div>

    <div class="form-group row">
        <label for="userPasswordAgain" class="col-2 col-form-label">Jelszó még egyszer</label>
        <div class="col-10">
            <input type="password" class="form-control" id="userPasswordAgain" name="userPasswordAgain" required>
        </div>
    </div>

    <div class="form-group row">
        <label for="userEmail" class="col-2 col-form-label">Email cím</label>
        <div class="col-10">
            <input type="email" class="form-control" id="userEmail" name="userEmail" value="<%= model.emailAddress %>" required>
        </div>
    </div>

    <div class="row">
        <div class="col-12 d-flex justify-content-end">
            <button type="submit" class="btn btn-primary">Mentés</button>
        </div>
    </div>
</form>